<div class="container" style="margin-top: 30px;" align="center">
 <form action="/update/<%=@one_post.id%>" method="post">
  <div class="form-group">
    <label for="exampleInputEmail1">Email address</label>
    <input type="email" class="form-control" name="email" id="exampleInputEmail1" value="<%=@one_post.email%>">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">title</label>
    <input type="text" class="form-control" name="title" id="exampleInputPassword1" value="<%=@one_post.title%>">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">content</label>
    <textarea class="form-control" name="content" rows="3"><%=@one_post.content%></textarea>
  </div>
  <button type="submit" class="btn btn-default">Submit</button>
</form>
</div>