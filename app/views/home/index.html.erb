<style>
    td {
        padding: 10px;
    }
</style>
<div class="container" style="margin-top: 30px;" align="center">

<h1>게시판</h1>
<br>
    <table width="100%" style="border-top :1.5px solid red;">
        <tr style="border-bottom :1.5px solid red;">
            <td>이메일</td>
            <td>제목</td>
            <td></td>
            <td></td>
        </tr>
        <% @posts.each do |p| %>
        <tr>
            <td><%= p.email %></td>
            <td><a href="/post_title/<%=p.id%>"><%= p.title %></a></td>
            <td><a href="/update/<%=p.id%>">수정</a></td>
            <td><a href="/destroy/<%=p.id%>">삭제</a></td>
        </tr>
        <% end %>
    </table>
    <br><br>
    <div align="right"><a href="/home/post_write">글쓰기</a></div>
</div>