<div class="container" style="margin-top: 30px;" align="center">
    <h2><%= @one_post.title %></h2> <br>
    
    
 
  <div class="form-group">
    <label for="exampleInputEmail1">Email address</label>
    <a href="/mail/<%=@one_post.id%>"><%= @one_post.email %></a>
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">title</label>
    <%= @one_post.title %>
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">content</label>
    <%= @one_post.content %>
  </div>

  <!-- 좋아요 -->
  
      <% if @one_post.likes.empty? %> 
          <a href="/<%= @one_post.id %>/like">좋아요</a>

      <% else %> 
          <% @one_post.likes.each do |l| %>
                
          <a href="/<%= @one_post.id %>/like/<%= l.id %>">좋아요</a>
          <%= l.like_count %>
          <% end %>        
   
      <% end %>


<br>
<hr>

    <h3>댓글입니다</h3>
        <br>
        <% @one_post.comments.each do |c| %>
          <p><strong>Email: </strong><%= c.email %></p>
          <p><strong>내용: </strong><%= c.content %></p>
          <a href="/<%= @one_post.id %>/comment_update/<%= c.id %>">수정</a>
          <a href="/<%= @one_post.id %>/comment_destroy/<%= c.id %>">삭제</a>
          <br><hr><br>
        <% end %>
      
        <hr>
        
        <h3>댓글작성</h3>
        <form action="/<%=@one_post.id %>/comment_create" method="post">
          <div class="form-group">
            <label for="exampleInputEmail1">Email address</label>
            <input type="email" class="form-control" id="exampleInputEmail1" name="email" placeholder="Email">
          </div>
          <div class="form-group">
            <label for="content">content</label>
            <textarea class="form-control" id="content" name="content" rows="3" placeholder="content"></textarea>
          </div>
          <button type="submit" class="btn btn-default">Submit</button>
        </form>
        <hr>
        <a href= "/">메인으로 돌아가기</a>
</div>